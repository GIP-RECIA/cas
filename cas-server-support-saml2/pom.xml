<!--                        <include>src/main/resources/**</include>-->
<!--                        <include>src/test/**</include>-->
<!--                    </includes>-->
<!--                </configuration>-->
<!--            </plugin>-->
        </plugins>
    </build>

    <distributionManagement>
        <repository>
            <id>local-nexus-release</id>
            <name>Nexus local (releases)</name>
            <url>https://nexus.recia.fr/content/repositories/releases/</url>
        </repository>
        <snapshotRepository>
            <id>local-nexus-snapshot</id>
            <name>Nexus local (snapshots)</name>
            <url>https://nexus.recia.fr/content/repositories/snapshots/</url>
        </snapshotRepository>
    </distributionManagement>
</project>
