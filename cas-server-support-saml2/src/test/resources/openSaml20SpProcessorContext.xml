<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">
    <description>
    	Configuration for the OpenSaml SAML 2.0 Processos.
    </description>

	<bean id="openSaml20Connector" class="org.esco.sso.security.saml.opensaml.OpenSaml20IdpConnector">
		<property name="samlMessageDecoder" ref="samlMessageDecoder" />
		<property name="clockSkewSeconds" value="60" />
		<property name="serviceProviderName" value="https://demo-ent.giprecia.org/cas" />
		<property name="serviceProviderUrl" value="https://demo-ent.giprecia.org/cas/saml2" />
	</bean>

	<bean id="samlMessageDecoder" class="org.opensaml.saml2.binding.decoding.HTTPPostDecoder">

	</bean>


	<bean id="saml20AuthnRequest" class="org.springframework.core.io.ClassPathResource">
		<constructor-arg type="String" value="saml/request/authnRequest.xml" />
	</bean>
	
	<bean id="saml20Response" class="org.springframework.core.io.ClassPathResource">
		<constructor-arg type="String" value="saml/request/response.xml" />
	</bean>
	
	<bean id="saml20Assertion" class="org.springframework.core.io.ClassPathResource">
		<constructor-arg type="String" value="saml/request/assertion.xml" />
	</bean>
	
</beans>